<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@color/White"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연습게임 글쓰기"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:textStyle="normal|bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Match_Write_ImageView_Back"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button16"
        android:background="@color/WhiteGray"
        android:layout_height="1sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/soso">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:src="@drawable/emblem"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/Match_Write_ImageView_Emblem"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기날짜"
                    android:textSize="14dp"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/Match_Write_ImageView_TeamName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기날짜"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:hint="경기 날짜"
                    android:layout_marginLeft="10dp"
                    android:background ="@null"
                    android:id="@+id/Match_Write_EditText_Date"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기시간"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14dp"
                        android:hint="경기 시작시간"
                        android:layout_marginLeft="10dp"
                        android:background ="@null"
                        android:id="@+id/Match_Write_EditText_StartTime"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14dp"
                        android:hint="경기 종료시간"
                        android:layout_marginLeft="10dp"
                        android:background ="@null"
                        android:id="@+id/Match_Write_EditText_FinishTime"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기장소"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title3"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:hint="경기 장소"
                    android:layout_marginLeft="10dp"
                    android:background ="@null"
                    android:id="@+id/Match_Write_EditText_Place"
                    android:maxLength="20"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비용"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title4"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:hint="비용"
                    android:layout_marginLeft="10dp"
                    android:background ="@null"
                    android:id="@+id/Match_Write_EditText_Pay"
                    android:maxLength="20"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="유니폼"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title5"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:hint="유니폼"
                    android:layout_marginLeft="10dp"
                    android:background ="@null"
                    android:id="@+id/Match_Write_EditText_Color"
                    android:maxLength="20"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기타사항"
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/title6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:background ="@null"
                        android:id="@+id/Match_Write_EditText_Extra"
                        android:gravity="top"
                        android:maxLength="200"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:id="@+id/Match_Write_TextView_ExtraCount"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="100dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:text=" 주차 x"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_Parking_Not"
                            android:textSize="12sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>

                        <CheckBox
                            android:text=" 무료 주차"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_Parking_Free"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            />

                        <CheckBox
                            android:text=" 유료 주차"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_Parking_Charge"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <CheckBox
                            android:text=" 전광판"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_Display"
                            android:textSize="12sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                        <CheckBox
                            android:text=" 샤워 가능"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_Shower"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"/>
                        <CheckBox
                            android:text="  냉 / 난방"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/Match_Write_CheckBox_ColdHot"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="올리기"
                android:id="@+id/Match_Write_Button_Write"
                android:background="@color/soso"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
