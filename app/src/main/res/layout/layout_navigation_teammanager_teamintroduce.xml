<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:text="  팀 소개 관리"
                android:background="@color/White"
                android:textColor="@color/MainColor_Navy"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/button2"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TeamManager_TeamIntro_ImageView_Emblem"
                    android:src="@drawable/plus"
                    android:scaleType="fitXY"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="  팀명 "
                        android:background="@color/White"
                        android:textColor="@color/MainColor_Navy"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:textStyle="normal|bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView19"
                        android:layout_weight="1.2"/>

                    <TextView
                        android:text="TextView"
                        android:background="@color/White"
                        android:textColor="@color/MainColor_Navy"
                        android:textSize="15dp"
                        android:textStyle="normal|bold"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/TeamManager_TeamIntro_TextView_TeamName"
                        android:layout_weight="1"
                         />

                    <TextView
                        android:text="  팀 주소"
                        android:background="@color/White"
                        android:textColor="@color/MainColor_Navy"
                        android:textSize="15dp"
                        android:textStyle="normal|bold"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView12"
                        android:layout_weight="1.2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/White">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/TeamManager_TeamIntro_Spinner_Do"
                            android:layout_weight="1"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/TeamManager_TeamIntro_Spinner_Si"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="  홈 코트"
                    android:textColor="@color/MainColor_Navy"
                    android:textSize="15dp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView23"
                    android:layout_weight="1.2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TeamManager_TeamIntro_EditText_HomeCourt"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_height="180dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="  팀 소개"
                    android:textColor="@color/MainColor_Navy"
                    android:textSize="15dp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView231"
                    android:layout_weight="4"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TeamManager_TeamIntro_EditText_Introduce"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_marginTop="10dp"
                android:layout_height="170dp">

                <TextView
                    android:text="  팀 소개이미지"
                    android:textColor="@color/MainColor_Navy"
                    android:textSize="15dp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2314"
                    android:layout_weight="4" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/TeamManager_TeamIntro_ImageView_Image1"
                        android:src="@drawable/basic_image"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:layout_margin="5dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/TeamManager_TeamIntro_ImageView_Image2"
                        android:src="@drawable/basic_image"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:layout_margin="5dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/TeamManager_TeamIntro_ImageView_Image3"
                        android:src="@drawable/basic_image"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:layout_margin="5dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="수정하기"
                android:id="@+id/TeamManager_TeamIntro_Button_Modify" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
