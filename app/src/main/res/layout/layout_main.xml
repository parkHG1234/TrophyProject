<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_marginBottom="10dp"
                android:layout_height="200dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </android.support.v4.view.ViewPager>
                <com.matthewtamlin.sliding_intro_screen_library.DotIndicator
                    android:id="@+id/main_indicator_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/container"
                    android:layout_alignLeft="@id/container"
                    android:layout_alignRight="@id/container"
                    android:layout_marginBottom="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_height="740dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="추천 스포츠 대회"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView20"
                        android:paddingLeft="8dp"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="더 보기"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Main_Contest_TextView_ContestFocus"
                        android:textColor="@color/BlackGray"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Contest_ListView_contest"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="실시간 랭킹"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2011"
                        android:paddingLeft="8dp"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="더 보기"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Main_Contest_TextView_RankingFocus"
                        android:textColor="@color/BlackGray"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <include layout="@layout/layout_main_ranking"></include>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="오늘의 시합요청"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView201"
                        android:paddingLeft="8dp"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="더 보기"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Main_Contest_TextView_Match_Focus"
                        android:textColor="@color/BlackGray"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Contest_ListView_Match"
                    android:layout_marginBottom="10dp" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="오늘의 야외코트"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2012"
                        android:paddingLeft="8dp"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="더 보기"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Main_Contest_TextView_OutCourt_Focus"
                        android:textColor="@color/BlackGray"
                        android:textStyle="normal|bold"
                        android:textSize="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Contest_ListView_OutCourt"
                    />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
