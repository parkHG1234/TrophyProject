<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/White">

        <ImageView
            android:src="@drawable/emblem"
            android:gravity="center"
            android:id="@+id/OutCourt_CourtInfo_Focus_Comment_Customlist_ImageView_Emblem"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 / 05"
                    android:textSize="12dp"
                    android:textColor="@color/BlackGray"
                    android:id="@+id/OutCourt_CourtInfo_Focus_Comment_Customlist_TextView_Date"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="박효근"
                    android:textColor="@color/Black"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:id="@+id/OutCourt_CourtInfo_Focus_Comment_Customlist_TextView_Name"
                    android:layout_marginTop="6dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요."
                    android:textColor="@color/Black"
                    android:textSize="12dp"
                    android:id="@+id/OutCourt_CourtInfo_Focus_Comment_Customlist_TextView_Memo"
                    android:layout_marginBottom="6dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/soso"
                    android:layout_marginBottom="1dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
