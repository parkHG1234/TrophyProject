<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@color/White">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:textStyle="normal|bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/User_withdrawal_ImageView_Back"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button16"
        android:background="@color/WhiteGray"
        android:layout_height="1dp" />

    <TextView
        android:text="※ 회원탈퇴를 하기 전에 안내 사항을 꼭 확인해 주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:background="@color/MainColor1_White"
        android:textSize="15sp"
        android:textColor="@color/White"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:text="회원정보 삭제 및 팀 탈퇴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView62"
            android:background="@color/White"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <TextView
            android:text="사용하고 계신 계정을 탈퇴하시면 개인정보가 삭제되고 팀에 소속되어 있는 경우 팀에서 즉각적으로 탈퇴되오니 신중하게 선택하시기 바랍니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView71"
            android:background="@color/White"
            android:textSize="14sp"
            android:textColor="@color/BlackGray"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:text="팀장인 경우"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:background="@color/White"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <TextView
            android:text="소속된 팀의 팀장일 경우 회원탈퇴가 불가능합니다. 팀관리 페이지에서 팀원중 한명에게 팀장 권한은 위임해 주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:background="@color/White"
            android:textSize="14sp"
            android:textColor="@color/BlackGray"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk_withdraw_agreement"
            android:layout_marginLeft="20dp"
            android:text="위에 내용을 모두 확인하였으며, 회원탈퇴를 하겠습니다."
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <Button
        android:text="회원탈퇴"
        android:layout_height="40dp"
        android:id="@+id/btn_commit_withdrawal"
        android:background="@color/main1color"
        android:textColor="@color/White"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp" />
</LinearLayout>