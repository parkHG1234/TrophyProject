<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp">

            <ImageView
                app:srcCompat="@drawable/profile_basic_image"
                android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_ImageView_Profile"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="박효근"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Name"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical"
                    android:textColor="@color/Black"/>

                <TextView
                    android:text="2017 / 06 / 24"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Date"
                    android:layout_weight="1"
                    android:gravity="top|center_vertical"
                    android:textColor="@color/DarkGray"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_ImageView_Content"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:text="안녕하세요."
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Content"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="댓글쓰기"
            android:textSize="12dp"
            android:textColor="@color/BlackGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_comment"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
    <ImageView
        app:srcCompat="@drawable/delete"
        android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_ImageView_Delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="18dp"
        android:layout_height="18dp" />
</RelativeLayout>
