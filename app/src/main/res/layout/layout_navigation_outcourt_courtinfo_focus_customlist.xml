<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp">

            <ImageView
                app:srcCompat="@drawable/profile_basic_image"
                android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_ImageView_Profile"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="박효근"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Name"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical"
                    android:textColor="@color/Black"/>

                <TextView
                    android:text="2017 / 06 / 24"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Date"
                    android:layout_weight="1"
                    android:gravity="top|center_vertical"
                    android:textColor="@color/DarkGray"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:text="안녕하세요."
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Layout_Navigation_OutCourt_CourtInfo_Focus_CustomList_TextView_Content"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</LinearLayout>
