<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/BlackGray"
        android:layout_height="140dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/Contest_logoImage"
            app:srcCompat="@drawable/contest_example"
            android:layout_margin="1dp"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent">

            <TextView
                android:text="대회명 : "
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contest_title"
                android:layout_margin="2dp"
                android:textStyle="normal|bold"
                android:gravity="center_vertical"
                android:layout_weight="0.7"/>

            <TextView
                android:text="대회장소"
                android:textColor="@color/Gray"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Contest_place"
                android:textStyle="normal|bold"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <TextView
                android:text="대회일시 : "
                android:textColor="@color/Gray"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal|bold"
                android:id="@+id/contest_date"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/backColor"
                android:gravity="center_vertical|fill_horizontal"
                android:padding="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="마감  "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest_list_remainder1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:text="2주"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest_list_remainder"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1" />

                    <TextView
                        android:text="전"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest_list_remainder2"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView9"
                        android:text="참여팀  "
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:gravity="right|center_vertical"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="현재인원/모집인원"
                        android:textStyle="normal|bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/contest_num"
                        android:textColor="@color/MainColor2"
                        android:gravity="center_vertical"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>