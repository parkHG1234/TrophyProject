<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@color/White"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀 정보"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:textStyle="normal|bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/TeamManager_ImageView_Back"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_height="wrap_content"
            android:src="@drawable/team_disperse"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/Teammanager_ImageView_disperse"
            android:layout_width="60dp" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button16"
        android:background="@color/WhiteGray"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="220dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:id="@+id/TeamManager_ImageView_Image1"
                            android:scaleType="fitXY"
                            android:layout_height="180dp">
                        </ImageView>
                        <ImageView
                            android:src="@drawable/camera"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            app:srcCompat="@drawable/basketball"
                            android:id="@+id/TeamManager_ImageView_Emblem"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />
                        <ImageView
                            android:src="@drawable/camera"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />
                    </RelativeLayout>

                </RelativeLayout>
                <TextView
                    android:text="클린쳐"
                    android:textColor="@color/Black"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TeamManager_TextView_TeamName"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/aaa"
                        android:gravity="center"
                        android:layout_width="100dp">
                        <TextView
                            android:text="서울"
                            android:textSize="15sp"
                            android:textColor="@color/Black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/TeamManager_TextView_TeamAddress_Do"
                            android:background="@color/White"
                            android:layout_marginRight="3dp" />
                        <TextView
                            android:text="서울"
                            android:textSize="15sp"
                            android:textColor="@color/Black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/TeamManager_TextView_TeamAddress_Si"
                            android:background="@color/White"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/modify"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@+id/aaa"
                        android:layout_centerVertical="true"
                        android:id="@+id/TeamManager_ImageVIew_ChangeArea"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="클린쳐"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        android:layout_height="match_parent"
                        android:id="@+id/TeamManager_TextView_HomeCourt"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_width="100dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/modify"
                        android:layout_height="20dp"
                        android:id="@+id/TeamManager_ImageVIew_HomeCourt"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/TeamManager_TextView_HomeCourt"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:text="팀 소개"
                        android:textSize="17sp"
                        android:textColor="@color/Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26121"
                        android:gravity="center"
                        android:textStyle="normal|bold"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:src="@drawable/modify"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/TeamManager_ImageVIew_TeamIntro"
                        android:layout_toRightOf="@+id/textView26121"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamManager_TextView_TeamIntro"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                    android:text="팀원 구성"
                    android:textSize="17sp"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2612"
                        android:gravity="center"
                    android:textStyle="normal|bold"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:src="@drawable/modify"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/TeamManager_ImageVIew_TeamPlayer"
                        android:layout_toRightOf="@+id/textView2612"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamManager_ListView_Player"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
