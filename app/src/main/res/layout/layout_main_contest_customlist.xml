<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="230dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/BlackGray"
        android:layout_height="match_parent"
        android:elevation="1dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/Contest1_logoImage"
            app:srcCompat="@drawable/contest_example"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="match_parent"
            android:layout_weight="2.3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:gravity="center_vertical|fill_horizontal"
                android:padding="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="마감  "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest1_list_remainder1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textSize="10dp"/>

                    <TextView
                        android:text="2주"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest1_list_remainder"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1"
                        android:textSize="10dp"/>

                    <TextView
                        android:text="전"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest1_list_remainder2"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1"
                        android:textSize="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:text="16/20"
                        android:textStyle="normal|bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/contest1_num"
                        android:textColor="@color/MainColor2"
                        android:gravity="right|center_vertical"
                        android:textSize="10dp"
                        android:layout_weight="2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp">

                <TextView
                    android:text="대회명 : "
                    android:textColor="@color/Black"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contest1_title"
                    android:layout_margin="2dp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    />

                <TextView
                    android:text="대회장소"
                    android:textColor="@color/Gray"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Contest1_place"
                    android:textStyle="normal|bold"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="대회일시 : "
                    android:textColor="@color/Gray"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:id="@+id/contest1_date"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/BlackGray"
        android:layout_height="match_parent"
        android:elevation="1dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/Contest2_logoImage"
            app:srcCompat="@drawable/contest_example"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="match_parent"
            android:layout_weight="2.3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:gravity="center_vertical|fill_horizontal"
                android:padding="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="마감  "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/Black"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest2_list_remainder1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textSize="10dp"/>

                    <TextView
                        android:text="2주"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest2_list_remainder"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1"
                        android:textSize="10dp"/>

                    <TextView
                        android:text="전"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:id="@+id/contest2_list_remainder2"
                        android:gravity="center_vertical"
                        android:textColor="@color/MainColor1"
                        android:textSize="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:text="16/20"
                        android:textStyle="normal|bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/contest2_num"
                        android:textColor="@color/MainColor2"
                        android:gravity="right|center_vertical"
                        android:textSize="10dp"
                        android:layout_weight="2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp">

                <TextView
                    android:text="대회명 : "
                    android:textColor="@color/Black"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contest2_title"
                    android:layout_margin="2dp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    />

                <TextView
                    android:text="대회장소"
                    android:textColor="@color/Gray"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Contest2_place"
                    android:textStyle="normal|bold"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="대회일시 : "
                    android:textColor="@color/Gray"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:id="@+id/contest2_date"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>