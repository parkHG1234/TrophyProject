<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/White">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:id="@+id/Contest_logoImage"
            app:srcCompat="@drawable/contest_example" />

        <TextView
            android:text="대회명 : "
            android:textColor="@color/Black"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contest_title" />

        <TextView
            android:text="대회일시 : "
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contest_date" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_weight="0.10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:elevation="1dp">

                <TextView
                    android:text="마감"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="#3f51b5"
                    android:id="@+id/contest_list_remainder1" />

                <TextView
                    android:text="2주"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contest_list_remainder"
                    android:textColor="#3f51b5" />

                <TextView
                    android:text="전"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contest_list_remainder2"
                    android:textColor="#3f51b5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/imageView9"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_account_circle_black_36px" />

                <TextView
                    android:text="현재인원/모집인원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:id="@+id/contest_num"
                    android:textColor="@color/Black"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:background="@color/Gray"
            android:layout_height="3dp"
            android:layout_margin="1dp" />
    </LinearLayout>

</LinearLayout>