<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Root"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선수 정보"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:padding="3dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_ImageView_Back"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:id="@+id/button16"
            android:background="@color/WhiteGray"
            android:layout_height="1dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_ImageView_Profile"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_margin="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:textColor="@color/White"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Button_TeamName"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:textColor="@color/White"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Button_Age"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:textColor="@color/White"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Button_Sex"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:textColor="@color/White"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Button_Address"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_LinearLayout_Duty"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:src="@drawable/phone"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_ImageView_Phone"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:src="@drawable/leader"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_ImageView_leader"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:src="@drawable/out"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_ImageView_Button_out"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:background="@drawable/phone"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_Button_extra"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_LinearLayout_Joiner_Choice"
            android:layout_height="35dp"
            android:layout_marginTop="20dp">

            <Button
                android:text="영입하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_LinearLayout_Joiner_Agree"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/White"/>

            <Button
                android:text="거절하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Layout_CustomDialog_TeamManager_PlayerManager_Focus_LinearLayout_Joiner_DisAgree"
                android:layout_weight="1"
                android:background="@color/DarkGray"
                android:textColor="@color/White"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>


